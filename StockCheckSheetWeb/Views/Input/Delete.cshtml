@model Input

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Input</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Amount" class="p-0"></label>
            <input asp-for="Amount" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="UnitCost" class="p-0"></label>
            <input asp-for="UnitCost" disabled class="form-control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="TotalCost" class="p-0"></label>
            <input asp-for="TotalCost" disabled class="form-control" />

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Input" asp-action="Index" class="btn btn-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>